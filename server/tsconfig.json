{
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["es6", "dom"],
		"strict": true,
		"noUnusedLocals": true,
		"noEmit": true,
		"pretty": true,
		"target": "es6",
		"module": "commonjs", // work for node.js only
		"moduleResolution": "node"
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [
		"node_modules",
		"../**/*.spec.ts"
	]
}